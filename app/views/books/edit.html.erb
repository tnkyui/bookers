<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="error">
  <h2 class="error-message"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
</div>
<% end %>


<%= form_with model:@book, url:update_book_path(@book.id), method: :patch do |f| %>
<div class="form">
  <label>Title</label>
  <%= f.text_field :title %>
</div>
<div class="form">
  <label>Body</label>
  <%= f.text_area :body %>
</div>
<div class="form">
  <%= f.submit 'Update Book' %>
</div>
<% end %>

<%= link_to 'Show', book_path(@book.id) %> | <%= link_to 'Back', '/books' %>