<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<h2>New book</h2>

<% if @book.errors.any? %>
<div class="error">
  <h2 class="error-message"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
</div>
<% end %>


<%= form_with model: @book, url:'/books', method: :post do |f| %>
<div class="form">
  <label>Title</label>
  <%= f.text_field :title %>
</div>
<div class="form">
  <label>Body</label>
  <%= f.text_area :body %>
</div>
<div class="form">
  <%= f.submit 'Create Book' %>
</div>
<% end %>