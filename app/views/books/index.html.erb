<h1>Books</h1>
<p>title</p>
<p>body</p>
<% @books.each do |book| %>
  <p><%= book.title %></p>
  <p><%= book.body %></p>
  <p>
    <%= link_to 'Show', book_path(book.id) %>
    <%= link_to 'Edit', edit_book_path(book.id) %>
    <%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  </p>
<% end %>


<h2>New book</h2>

<%= render 'layouts/error' %>

<%= form_with model:@books, url:'/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>